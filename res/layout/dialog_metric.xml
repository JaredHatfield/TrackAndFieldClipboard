<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
    <TextView 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:layout_alignParentLeft="true" 
    	android:id="@+id/textView_label_meters" 
    	android:text="@string/meters"
    	android:textSize="@dimen/font_size"
    	android:paddingRight="@dimen/form_label_right_padding" />
    <EditText 
    	android:layout_width="fill_parent" 
    	android:id="@+id/editText_distance_meters" 
    	android:layout_toRightOf="@+id/textView_label_meters" 
    	android:layout_alignBaseline="@+id/textView_label_meters"
    	android:layout_height="wrap_content" 
    	android:inputType="numberDecimal" />
</RelativeLayout>

