<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">
	<TableLayout  
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:padding="@dimen/table_padding">
	    <TableRow 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:text="@string/name" 
	        	android:layout_width="match_parent" 
	        	android:layout_gravity="right" 
	        	android:textSize="@dimen/font_size" />
	        <EditText 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/editText_event_name" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:singleLine="true" />
	    </TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:text="@string/event_type" 
	        	android:textSize="@dimen/font_size" 
	        	android:layout_gravity="right" />
	        <Spinner 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/spinner_event_type" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" />
	    </TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:text="@string/gender" 
	        	android:textSize="@dimen/font_size" 
	        	android:layout_gravity="right" />
	        <Spinner 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/spinner_event_gender" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" />
	    </TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:text="@string/date" 
	        	android:textSize="@dimen/font_size" 
	        	android:layout_gravity="right" />
	        <EditText 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/editText_event_date" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:singleLine="true" />
	    </TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:text="@string/qualifying_marks" 
	        	android:textSize="@dimen/font_size" 
	        	android:layout_gravity="right" />
	        <Spinner 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/spinner_event_qualifying_marks" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" />
	    </TableRow>
	    <TableRow 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	    	<TextView />
	    	<TextView 
	        	android:paddingBottom="@dimen/tip_padding_bottom"
	        	android:layout_height="wrap_content" 
	        	android:layout_width="fill_parent"
	        	android:text="@string/hint_qualifying_marks" 
	        	android:textSize="@dimen/font_tip" 
	        	android:textColor="@color/tip" />
    	</TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:text="@string/finals_marks" 
	        	android:textSize="@dimen/font_size" 
	        	android:layout_gravity="right" />
	        <Spinner 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/spinner_event_final_marks" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" />
	    </TableRow>
	    <TableRow 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	    	<TextView />
	    	<TextView 
	        	android:paddingBottom="@dimen/tip_padding_bottom"
	        	android:layout_height="wrap_content" 
	        	android:layout_width="fill_parent"
	        	android:textSize="@dimen/font_tip" 
	        	android:textColor="@color/tip" android:text="@string/hint_final_marks"/>
    	</TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:text="@string/final_participants" 
	        	android:textSize="@dimen/font_size" 
	        	android:layout_gravity="right" />
	        <EditText 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/editText_event_final_participants" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:inputType="number" 
	        	android:text="@string/default_final_participants" />
	    </TableRow>
	    <TableRow 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	    	<TextView />
	    	<TextView 
	        	android:paddingBottom="@dimen/tip_padding_bottom"
	        	android:layout_height="wrap_content" 
	        	android:layout_width="fill_parent"
	        	android:textSize="@dimen/font_tip" 
	        	android:textColor="@color/tip" android:text="@string/hint_final_participants"/>
    	</TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:text="@string/flights" 
	        	android:textSize="@dimen/font_size" 
	        	android:layout_gravity="right" />
	        <EditText 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/editText_event_flights" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:inputType="number" 
	        	android:text="@string/default_number_of_flights" />
	    </TableRow>
	    <TableRow 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	    	<TextView />
	    	<TextView 
	        	android:paddingBottom="@dimen/tip_padding_bottom"
	        	android:layout_height="wrap_content" 
	        	android:layout_width="fill_parent"
	        	android:textSize="@dimen/font_tip" 
	        	android:textColor="@color/tip" android:text="@string/hint_number_of_flights"/>
    	</TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView 
	        	android:paddingTop="@dimen/form_label_top_padding" 
	        	android:paddingRight="@dimen/form_label_right_padding" 
	        	android:layout_height="wrap_content" 
	        	android:layout_width="wrap_content" 
	        	android:text="@string/unit" 
	        	android:textSize="@dimen/font_size" 
	        	android:layout_gravity="right" />
	        <Spinner 
	        	android:width="@dimen/form_element_width" 
	        	android:id="@+id/spinner_event_units" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" />
	    </TableRow>
	    <TableRow 
	    	android:paddingTop="@dimen/form_spacing" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	        <TextView />
	        <Button 
	        	android:id="@+id/button_add_event" 
	        	android:onClick="onAddClick" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" 
	        	android:text="@string/add" />
	    </TableRow>
	</TableLayout>
</ScrollView>
