 <LinearLayout 
 	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
     <Button 
     	android:text="@string/import_data" 
     	android:id="@+id/button_import_data" 
     	android:layout_width="wrap_content" 
     	android:layout_height="wrap_content" />
     <TextView 
      	android:paddingBottom="@dimen/tip_padding_bottom"
      	android:layout_height="wrap_content" 
      	android:layout_width="fill_parent"
      	android:text="@string/hint_import" 
      	android:textSize="@dimen/font_tip" 
      	android:textColor="@color/tip" />
     <EditText 
     	android:layout_width="match_parent" 
     	android:id="@+id/editText_import_url"
     	android:gravity="top"
     	android:layout_height="fill_parent" />
    
</LinearLayout>
